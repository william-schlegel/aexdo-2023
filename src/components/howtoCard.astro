---
import type { CollectionEntry } from "astro:content";

interface Props {
  howto: CollectionEntry<"howtos">;
  previous?: boolean;
  next?: boolean;
}

const { howto, previous, next } = Astro.props;
---

<div
  class={`flex gap-4 bg-base-100 text-aexdo border border-aexdo p-4 items-center text-base rounded shadow hover:bg-base-200`}
>
  {previous ? <i class="bx bx-chevron-left bx-md" /> : null}

  <a href={`/howto/${howto.slug}`}>{howto.data.title}</a>
  {next ? <i class="bx bx-chevron-right  bx-md" /> : null}
</div>
